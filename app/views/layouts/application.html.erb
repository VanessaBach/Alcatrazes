<!DOCTYPE html>
<html>
  <head>
    <title>Boia de Alcatrazes</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon2.png') %>

    <meta name="description" content="Dados meteoceanográficos em tempo real em Alcatrazes">
    <meta property="og:title" content="Boia Alcatrazes" />
    <meta property="og:url" content="http://www.operantar.live/" />
    <meta property="og:description" content="Dados meteoceanográficos em tempo real em Alcatrazes">
    <meta property="og:image" content="<%= image_url ('abrolhos.jpg') %>">

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pt_BR">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:100,200" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script src="https://cdn.plot.ly/plotly-2.2.0.min.js"></script>
    <script src='https://npmcdn.com/@turf/turf/turf.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>